class Div
{
   public static void main(String [] args)
   {
      int a=10;
      int b=0;
      try
      {
         System.out.println(a/b);
      }
      catch(ArithmeticException E)
      {
         System.out.println("Exception occurs");
      }
     finally
     {
        System.out.println("This statement  will returned in both cases either the exception thrown or not");
     }
   }
}
