public class Ex5
{
   static void arr(int[] a)
   {
      if(a.length<=5)
      {


         throw new ArrayIndexOutOfBoundsException("Invalid out of bound:");
      }
   }
   public static void main(String args[])
   {
      int[] a={1,2,3};
      try
      {
         arr(a);
      }
      catch(ArrayIndexOutOfBoundsException E)
      {
         System.out.println("Caught Array out of Bound Exception:"+E.getMessage());
      }
   }
}
